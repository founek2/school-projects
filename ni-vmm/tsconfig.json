{
    "compilerOptions": {
        "target": "es2020",
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "strict": true,
        "rootDir": "./",
        "outDir": "dist",
        "lib": ["dom", "dom.iterable", "esnext"],
        "sourceMap": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "module": "NodeNext",
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
